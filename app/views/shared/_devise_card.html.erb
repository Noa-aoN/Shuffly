<% title = local_assigns.fetch(:title, '') %>
<% content = local_assigns.fetch(:content) { yield } %>
<% width_class = local_assigns.fetch(:width, 'max-w-6xl') %>

<div class="<%= width_class %> mx-auto px-6 py-6 md:py-8">
  <div class="bg-white rounded-xl shadow-sm p-6 md:p-8">
    <% if title.present? %>
      <h1 class="text-2xl md:text-3xl font-bold mb-6 md:mb-8"><%= title %></h1>
    <% end %>

    <%= content %>
  </div>
</div>
