<%# マイページ用タブナビゲーション %>
<% active_tab = local_assigns.fetch(:active_tab, 'events') %>

<div class="border-b border-gray-200 mb-6" role="tablist">
  <div class="flex gap-8">
    <%= link_to mypage_path(tab: 'events'),
          class: "py-3 px-1 border-b-2 font-medium text-sm transition #{active_tab == 'events' ? 'border-blue-600 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" do %>
      <%= t("mypage.tabs.events") %>
    <% end %>

    <%= link_to mypage_path(tab: 'member_lists'),
          class: "py-3 px-1 border-b-2 font-medium text-sm transition #{active_tab == 'member_lists' ? 'border-blue-600 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" do %>
      <%= t("mypage.tabs.member_lists") %>
    <% end %>

    <%= link_to mypage_path(tab: 'account'),
          class: "py-3 px-1 border-b-2 font-medium text-sm transition #{active_tab == 'account' ? 'border-blue-600 text-blue-600' : 'border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300'}" do %>
      <%= t("mypage.tabs.account") %>
    <% end %>
  </div>
</div>
