<%# サインイン画面 %>

<%= render 'shared/devise_card', title: t("devise.sessions.new.title") do %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 w-full border rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 w-full border rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="mb-4">
        <label class="inline-flex items-center gap-2 text-sm cursor-pointer">
          <%= f.check_box :remember_me, class: "rounded border-gray-300 text-blue-600 focus:ring-2 focus:ring-blue-500 focus:ring-offset-0" %>
          <span class="text-gray-700"><%= t("devise.sessions.new.remember_me") %></span>
        </label>
      </div>
    <% end %>

    <div class="flex justify-center mt-6">
      <%= render 'shared/button',
            f: f,
            button_text: t("devise.sessions.new.submit"),
            variant: 'primary',
            size: 'lg' %>
    </div>
  <% end %>

  <div class="mt-8">
    <%= render "devise/shared/links" %>
  </div>
<% end %>