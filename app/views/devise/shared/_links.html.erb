<%# Devise共有リンク: 適度な間隔で中央揃え %>
<div class="flex flex-col items-center gap-3 text-sm">
  <%- if controller_name != 'sessions' %>
    <%= link_to t("devise.shared.links.log_in"), new_session_path(resource_name), class: "text-blue-600 hover:underline" %>
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to t("devise.shared.links.sign_up"), new_registration_path(resource_name, pending_event_token: params[:pending_event_token], redirect_to: params[:redirect_to]), class: "text-blue-600 hover:underline" %>
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to t("devise.shared.links.forgot_password"), new_password_path(resource_name), class: "text-blue-600 hover:underline" %>
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to t("devise.shared.links.didnt_receive_confirmation"), new_confirmation_path(resource_name), class: "text-blue-600 hover:underline" %>
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to t("devise.shared.links.didnt_receive_unlock"), new_unlock_path(resource_name), class: "text-blue-600 hover:underline" %>
  <% end %>

  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to t("devise.shared.links.sign_in_with", provider: OmniAuth::Utils.camelize(provider)), omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "text-blue-600 hover:underline bg-transparent border-0 cursor-pointer text-sm underline" %>
    <% end %>
  <% end %>
</div>
