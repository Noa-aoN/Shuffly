<%# サインアップ画面 %>

<%= render 'shared/devise_card', title: t("devise.registrations.new.title") do %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" do %>
        <%= t("activerecord.attributes.user.email") %>
        <span class="text-red-500 ml-1">*</span>
      <% end %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 w-full border border-gray-300 rounded-lg px-4 py-3 text-base focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition" %>
    </div>

    <div class="mb-4 relative">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" do %>
        <%= t("activerecord.attributes.user.password") %>
        <span class="text-red-500 ml-1">*</span>
      <% end %>
      <% if @minimum_password_length %>
        <div class="text-xs text-gray-500 mb-1"><%= t("devise.registrations.new.password_min_length", count: @minimum_password_length) %></div>
      <% end %>
      <div class="relative">
        <%= f.password_field :password, autocomplete: "new-password", class: "w-full border border-gray-300 rounded-lg px-4 py-3 pr-12 text-base focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition", id: "password-field" %>
        <button type="button" onclick="togglePasswordVisibility('password-field')" class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-700 focus:outline-none" aria-label="パスワードを表示">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" id="password-field-icon">
            <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
            <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
    </div>

    <div class="mb-4 relative">
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" do %>
        <%= t("activerecord.attributes.user.password_confirmation") %>
        <span class="text-red-500 ml-1">*</span>
      <% end %>
      <div class="relative">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border border-gray-300 rounded-lg px-4 py-3 pr-12 text-base focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition", id: "password-confirmation-field" %>
        <button type="button" onclick="togglePasswordVisibility('password-confirmation-field')" class="absolute right-3 top-1/2 -translate-y-1/2 text-gray-500 hover:text-gray-700 focus:outline-none" aria-label="パスワードを表示">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" id="password-confirmation-field-icon">
            <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
            <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
    </div>

    <div class="flex justify-center mt-6">
      <%= render 'shared/button',
            f: f,
            button_text: t("devise.registrations.new.submit"),
            variant: 'primary',
            size: 'lg' %>
    </div>
  <% end %>

  <div class="mt-8">
    <%= render "devise/shared/links" %>
  </div>
<% end %>

<script>
function togglePasswordVisibility(fieldId) {
  const field = document.getElementById(fieldId);
  const icon = document.getElementById(fieldId + '-icon');

  if (field.type === 'password') {
    field.type = 'text';
    icon.innerHTML = '<path fill-rule="evenodd" d="M3.707 2.293a1 1 0 00-1.414 1.414l14 14a1 1 0 001.414-1.414l-1.473-1.473A10.014 10.014 0 0019.542 10C18.268 5.943 14.478 3 10 3a9.958 9.958 0 00-4.512 1.074l-1.78-1.781zm4.261 4.26l1.514 1.515a2.003 2.003 0 012.45 2.45l1.514 1.514a4 4 0 00-5.478-5.478z" clip-rule="evenodd" /><path d="M12.454 16.697L9.75 13.992a4 4 0 01-3.742-3.741L2.335 6.578A9.98 9.98 0 00.458 10c1.274 4.057 5.064 7 9.542 7 .847 0 1.669-.105 2.454-.303z" />';
  } else {
    field.type = 'password';
    icon.innerHTML = '<path d="M10 12a2 2 0 100-4 2 2 0 000 4z" /><path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />';
  }
}
</script>