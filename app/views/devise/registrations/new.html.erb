<%# サインアップ画面 %>

<%= render 'shared/devise_card', title: t("devise.registrations.new.title") do %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
    <div class="mb-4">
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-1 w-full border rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <div class="mb-4">
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <% if @minimum_password_length %>
        <div class="text-xs text-gray-500 mb-1"><%= t("devise.registrations.new.password_min_length", count: @minimum_password_length) %></div>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 w-full border rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <div class="mb-4">
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 w-full border rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
    </div>

    <div class="flex justify-center mt-6">
      <%= render 'shared/button',
            f: f,
            button_text: t("devise.registrations.new.submit"),
            variant: 'primary',
            size: 'lg' %>
    </div>
  <% end %>

  <div class="mt-8">
    <%= render "devise/shared/links" %>
  </div>
<% end %>